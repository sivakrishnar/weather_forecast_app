<%= render "form" %>

<br />
<br />

<div class="row">
   <h2>Current Temperature: </h2>
   <div class="col-lg-6">
         <p><strong><%= @current_temperature['name'].upcase %></strong></p>
         <img src="<%=@current_temperature['icon']%>" alt="" class="pull-left">
         <h2><%= @current_temperature["temperature"] %><%=@current_temperature['temperatureUnit'] %></h2>
    </div>
</div>


<br />
<br />
<br />

<div class="row">
  <h2>Weather Forecast</h2>
 <% @weather_forecast.each_slice(2) do |forecast_high, forecast_low| %>
     <div class="col-sm-2">
         <img src="<%=forecast_high['icon']%>" alt="" class="pull-left">
         <p><strong><%= forecast_high['name'].upcase %></strong></p>
         <p><%= forecast_high['shortForecast'] %></p> 
         <h2><%= forecast_high["temperature"] %><%=forecast_high['temperatureUnit'] %>/<%= forecast_low["temperature"] %><%=forecast_low['temperatureUnit'] %></h2>
         <p><%= forecast_high['detailedForecast'] %></p>
    </div>
  <% end %>  
</div>


